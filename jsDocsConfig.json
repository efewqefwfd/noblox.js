{
    "recurseDepth": 2,
    "docs": "./jsdocs/tutorials",
    
    "source": {
        "include": ["./typings", "./lib"], 
        "includePattern": "\\.(jsx|js|ts|tsx)$"
    },
    
    "opts" : {
        "encoding": "utf8",
        "destination": "./docs/build",
        "readme": "./docs/readme.md",
        "recurse": true,
        "verbose": true,
        "tutorials": "./docs/tutorials",
        "template": "better-docs"
    },

    "plugins": [
        "node_modules/better-docs/component",
        "node_modules/better-docs/category",
        "node_modules/better-docs/typescript",
        "plugins/markdown"
    ],

    "tags": {
        "allowUnknownTags": ["optional", "category"]
    },

    "templates": {
        "better-docs": {
            "logo": "./noblox-js-small.png",
            "title": "Noblox.js: Roblox API Wrapper",
            "hideGenerator": true,
            "navLinks": [
                {
                    "label": "Github",
                    "href": "https://github.com/suufi/noblox.js"
                },
                {
                    "label": "Roblox API Server",
                    "href": "https://discord.gg/EDXNdAT"
                }
            ]
        },
        "search": true,
        "default": {
            "staticFiles": {
                "include": [
                    "./img/noblox-js-small.png"
                ]
            }
        }
    }
}